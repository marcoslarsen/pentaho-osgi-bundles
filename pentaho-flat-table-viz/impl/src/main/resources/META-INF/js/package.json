{
  "name": "${project.artifactId}",
  "version": "${project.version}",
  "description": "${project.description}",

  "main": "main.js",

  "packages": [
    {
      "name": "flat-table-viz",
      "main": "model"
    }
  ],

  "config": {
    "pentaho/service": {
      "${project.artifactId}_${project.version}/flat-table-viz" : "pentaho/visual/base"
    }
  },

  "dependencies": {

    "requirejs": "${requirejs.version}",
    "require-css": "${require-css.version}",
    "requirejs-text": "${requirejs-text.version}",

    "underscorejs": "${underscore.version}",
    "jquery": "${jquery.version}",
    "bootstrap-css": "${bootstrap.version}",

    "datatables.net": "${datatables.net.version}",
    "datatables.net-bs": "${datatables.net-bs.version}",
    "datatables.net-fixedheader": "${datatables.net-fixedheader.version}",
    "datatables.net-fixedheader-bs": "${datatables.net-fixedheader-bs.version}",
    "datatables.net-scroller": "${datatables.net-scroller.version}",
    "datatables.net-scroller-bs": "${datatables.net-scroller-bs.version}",
    "datatables.net-colreorder": "${datatables.net-colreorder.version}",
    "datatables.net-colreorder-bs": "${datatables.net-colreorder-bs.version}"
  },

  "paths": {
    "flat-table-viz": "/${project.artifactId}/${project.version}/flat-table-viz",
    "flat-table-module-id": "/${project.artifactId}_${project.version}/flat-table-viz"
  }
}
